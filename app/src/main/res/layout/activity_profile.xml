<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_100"
    android:orientation="vertical"
    tools:context=".screens.Profile">
    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:paddingVertical="100dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:orientation="vertical"
            android:padding="10dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_marginTop="100dp"
                app:strokeColor="@color/teal_100"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:layout_height="250dp"
                android:src="@drawable/ic_baseline_person_pin_24"
                android:layout_width="350dp"/>

            <TextView
                android:id="@+id/emailProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColor="@color/teal_400"
                android:fontFamily="@font/baloo_bhaijaan_medium"
                android:gravity="center_horizontal"
                android:hint="الايميل "
                android:padding="7dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/nameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:ellipsize="middle"
                android:fontFamily="@font/baloo_bhaijaan_medium"
                android:gravity="center_horizontal"
                android:hint="الاسم "
                android:padding="7dp"
                android:textColor="@color/teal_500"
                android:scrollbars="vertical"
                android:textSize="17dp" />

            <View
                android:layout_width="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="50dp"
                android:layout_height="1dp"
                android:background="@color/teal_100"
                />

            <TextView
                android:id="@+id/addressProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhaijaan_regular"
                android:gravity="start|center_vertical"
                android:hint="العنوان"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/phoneProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhaijaan_regular"
                android:gravity="start|center_vertical"
                android:drawablePadding="10dp"
                android:hint="الهاتف"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/birthdayProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhaijaan_regular"
                android:gravity="start|center_vertical"
                android:hint="الميلاد"
                android:drawableStart="@drawable/ic_baseline_cake_24"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2"
                android:scrollbars="vertical"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:layout_marginBottom="100dp"
                android:textSize="15dp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97" />

    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>