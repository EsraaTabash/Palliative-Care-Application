<!--                app:layout_constraintStart_toEndOf="@+id/NotificatioUserImage"-->
<!--                app:layout_constraintTop_toTopOf="@+id/NotificatioUserImage" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>