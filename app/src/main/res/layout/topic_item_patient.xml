<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id="@+id/topic_card"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:gravity="top">
        <ImageView
            android:id="@+id/topic_logo_patient"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_launcher_background" />
          <LinearLayout
              android:layout_marginTop="10dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="20dp">
              <TextView
                  android:id="@+id/topic_name_patient"
                  android:lineHeight="25dp"
                  android:textStyle="bold"
                  android:maxLines="2"
                  android:textSize="20dp"
                  android:text="اســم الموضــوع . . ."
                  android:fontFamily="@font/baloo_bhaijaan_regular"
                  android:textColor="@color/black"
                  android:layout_width="wrap_content"
                  android:ellipsize="end"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/topic_description_patient"
                  android:maxLines="2"
                  android:text="وصــف الموضــوع . . ."
                  android:textColor="@color/black"
                  android:fontFamily="@font/baloo_bhaijaan_regular"
                  android:layout_width="wrap_content"
                  android:ellipsize="end"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:paddingEnd="10dp"
                  android:layout_gravity="start"
                  android:layout_marginTop="5dp"
                  android:text="اضغط لقـــراءة المزيــد..."
                  android:textColor="#7A7979"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

      </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>